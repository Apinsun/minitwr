extends layout

block content
	div(class="container-fluid").menu
		div(class="row-offset-2")
			div(class="col-md-2")
				img(src="../images/logo.png")
			div(class="col-md-1 col-md-offset-8", style="padding-top:17px")
				a.btn.btn-default(href="/signup", role="button") S'inscrire
	div(class="container-fluid").signin
		div(class="row").padrow
			div(class="col-md-6")
				h1.
					Bienvenue sur uMess
				p.
					Le réseau uMess est un nouveau réseau social des étudiants
					de l'Université de Strasbourg.
				p.
					Pour partager vos pensées sous forme des messages instantanées
					il vous suffit de vous iscrire et vous connecter ensuite à chaque
					fois que vous décider de faire part de vos nouvelles à vos camarades.
			div(class="col-md-6")
				h1.
					Connexion
				p.
					Utiliser vos identifiants personnels pour vous connecter.
				form(class="form-horizontal", action="/login", method="POST")
					div(class="form-group")
						label(for="inputText3", class="col-sm-5 control-label") Nom d'utilisateur
						div(class="col-sm-7")
							input(type="text", class="form-control", id="inputText3", placeholder="Nom d'utilisateur", name="username")
					div(class="form-group")
						label(for="inputPassword3", class="col-sm-5 control-label") Mot de passe
						div(class="col-sm-7")
							input(type="password", class="form-control", id="inputPassword3", placeholder="Mot de passe", name="password")
					div(class="form-group")
						div(class="col-sm-offset-2 col-sm-10")
							button(type="submit", class="btn btn-default") Se connecter
	div(class="container-fluid").footer
		div(class="row")
			div(class="col-sm-12")
				&copy; 2015 uMess team. Tous droits réservés.
